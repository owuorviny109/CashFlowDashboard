@model CashFlowDashboard.ViewModels.AlertsViewModel

@{
    ViewData["Title"] = "System Alerts";
}

@functions {
    string GetSeverityColor(CashFlowDashboard.Models.Enums.AlertSeverity severity)
    {
        return severity switch
        {
            CashFlowDashboard.Models.Enums.AlertSeverity.Critical => "red",
            CashFlowDashboard.Models.Enums.AlertSeverity.Warning => "amber",
            _ => "blue"
        };
    }

    string GetSeverityIcon(CashFlowDashboard.Models.Enums.AlertSeverity severity)
    {
        return severity switch
        {
            CashFlowDashboard.Models.Enums.AlertSeverity.Critical => "error",
            CashFlowDashboard.Models.Enums.AlertSeverity.Warning => "warning",
            _ => "info"
        };
    }
}

<div class="flex flex-col gap-6">
    <!-- Toolbar -->
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-3 bg-white dark:bg-surface-dark p-1 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm">
            <a asp-action="Index" asp-route-filter="All" 
               class="px-4 py-2 rounded-lg text-sm font-bold transition-colors @(Model.CurrentFilter == "All" ? "bg-background-light dark:bg-slate-800 text-slate-900 dark:text-white shadow-sm" : "text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800")">
                All Alerts
            </a>
            <a asp-action="Index" asp-route-filter="Critical" 
               class="px-4 py-2 rounded-lg text-sm font-bold transition-colors @(Model.CurrentFilter == "Critical" ? "bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 shadow-sm border border-red-100 dark:border-red-900" : "text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800")">
                Critical
            </a>
            <a asp-action="Index" asp-route-filter="Warning" 
               class="px-4 py-2 rounded-lg text-sm font-bold transition-colors @(Model.CurrentFilter == "Warning" ? "bg-amber-50 dark:bg-amber-900/20 text-amber-600 dark:text-amber-400 shadow-sm border border-amber-100 dark:border-amber-900" : "text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800")">
                Warnings
            </a>
        </div>
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-2">
                <span class="text-xs font-medium text-slate-400 uppercase tracking-wider">Unread: @Model.UnreadCount</span>
            </div>
            <div class="h-4 w-px bg-slate-300 dark:bg-slate-700"></div>
            
            <form method="post" asp-action="Generate" asp-controller="Alerts">
                 <button type="submit" class="flex items-center gap-2 px-4 py-2 bg-slate-200 hover:bg-slate-300 dark:bg-slate-700 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 rounded-lg text-sm font-bold transition-all shadow-sm">
                    <span class="material-symbols-outlined text-lg">autorenew</span>
                    Run Health Check
                </button>
            </form>

            <form method="post" asp-action="MarkAllAsRead" asp-controller="Alerts">
                <button type="submit" class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg text-sm font-bold transition-all shadow-md shadow-primary/20">
                    <span class="material-symbols-outlined text-lg">done_all</span>
                    Mark all as read
                </button>
            </form>
        </div>
    </div>

    @if (Model.TodayAlerts.Any())
    {
        <!-- Alert Group: Today -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Today</h3>
            @foreach (var alert in Model.TodayAlerts)
            {
                var color = GetSeverityColor(alert.Severity);
                var icon = GetSeverityIcon(alert.Severity);
                <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row">
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-@(color)-600"></div>
                    <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                        <div class="h-12 w-12 rounded-full bg-@(color)-600/10 text-@(color)-600 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined filled">@icon</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <div class="flex items-center gap-3">
                                <h4 class="text-base font-bold text-slate-900 dark:text-white">@alert.Title</h4>
                                @if (alert.Severity == CashFlowDashboard.Models.Enums.AlertSeverity.Critical)
                                {
                                    <span class="px-2 py-0.5 rounded-full bg-@(color)-600/10 text-@(color)-600 text-xs font-bold border border-@(color)-600/20">Urgent</span>
                                }
                            </div>
                            <p class="text-slate-500 text-sm leading-relaxed">@alert.Message</p>
                            <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">schedule</span> @alert.TimeAgo
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                        @if (alert.Status == CashFlowDashboard.Models.Enums.AlertStatus.Unread)
                        {
                            <form method="post" asp-action="MarkAsRead" asp-controller="Alerts" asp-route-id="@alert.Id" class="w-full">
                                <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                                    Mark as Read
                                </button>
                            </form>
                        }
                        else
                        {
                             <span class="flex items-center gap-1.5 text-xs font-bold text-slate-400 uppercase tracking-wider">
                                <span class="material-symbols-outlined text-base">check_circle</span>
                                Read
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.YesterdayAlerts.Any())
    {
        <!-- Alert Group: Yesterday -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Yesterday</h3>
            @foreach (var alert in Model.YesterdayAlerts)
            {
                var color = GetSeverityColor(alert.Severity);
                var icon = GetSeverityIcon(alert.Severity);
                <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row opacity-90 hover:opacity-100">
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-@(color)-500"></div>
                    <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                        <div class="h-12 w-12 rounded-full bg-@(color)-500/10 text-@(color)-500 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined">@icon</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <h4 class="text-base font-bold text-slate-900 dark:text-white">@alert.Title</h4>
                            <p class="text-slate-500 text-sm leading-relaxed">@alert.Message</p>
                            <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">calendar_today</span> @alert.TimeAgo
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                        @if (alert.Status == CashFlowDashboard.Models.Enums.AlertStatus.Unread)
                        {
                            <form method="post" asp-action="MarkAsRead" asp-controller="Alerts" asp-route-id="@alert.Id" class="w-full">
                                <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                                    Mark as Read
                                </button>
                            </form>
                        }
                        else
                        {
                             <span class="flex items-center gap-1.5 text-xs font-bold text-slate-400 uppercase tracking-wider">
                                <span class="material-symbols-outlined text-base">check_circle</span>
                                Read
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.OlderAlerts.Any())
    {
        <!-- Alert Group: Older -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Older</h3>
            @foreach (var alert in Model.OlderAlerts)
            {
                var color = GetSeverityColor(alert.Severity);
                var icon = GetSeverityIcon(alert.Severity);
                <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row opacity-80 hover:opacity-100 grayscale hover:grayscale-0">
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-@(color)-500"></div>
                    <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                        <div class="h-12 w-12 rounded-full bg-@(color)-500/10 text-@(color)-500 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined">@icon</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <h4 class="text-base font-bold text-slate-900 dark:text-white">@alert.Title</h4>
                            <p class="text-slate-500 text-sm leading-relaxed">@alert.Message</p>
                            <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">calendar_today</span> @alert.TimeAgo
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                        @if (alert.Status == CashFlowDashboard.Models.Enums.AlertStatus.Unread)
                        {
                            <form method="post" asp-action="MarkAsRead" asp-controller="Alerts" asp-route-id="@alert.Id" class="w-full">
                                <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                                    Mark as Read
                                </button>
                            </form>
                        }
                        else
                        {
                             <span class="flex items-center gap-1.5 text-xs font-bold text-slate-400 uppercase tracking-wider">
                                <span class="material-symbols-outlined text-base">check_circle</span>
                                Read
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    }

    @if (!Model.TodayAlerts.Any() && !Model.YesterdayAlerts.Any() && !Model.OlderAlerts.Any())
    {
        <!--  Empty State -->
        <div class="flex flex-col items-center justify-center py-16 text-center">
            <div class="h-16 w-16 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center mb-4">
                <span class="material-symbols-outlined text-3xl text-slate-400">notifications_off</span>
            </div>
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2">No Alerts</h3>
            <p class="text-sm text-slate-500 max-w-md">You're all caught up! There are no active alerts at this time.</p>
        </div>
    }

    <!-- Footer / End of List -->
    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="flex items-center justify-between border-t border-slate-200 dark:border-slate-700 bg-white dark:bg-surface-dark px-6 py-3 rounded-b-xl">
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-slate-500 dark:text-slate-400">
                        Showing <span class="font-medium text-slate-900 dark:text-white">@((Model.CurrentPage - 1) * Model.PageSize + 1)</span> to <span class="font-medium text-slate-900 dark:text-white">@Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)</span> of <span class="font-medium text-slate-900 dark:text-white">@Model.TotalCount</span> results
                    </p>
                </div>
                <div>
                    <nav aria-label="Pagination" class="isolate inline-flex -space-x-px rounded-md shadow-sm">
                        @if (Model.CurrentPage > 1)
                        {
                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-filter="@Model.CurrentFilter" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 dark:ring-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 focus:z-20 focus:outline-offset-0">
                                <span class="sr-only">Previous</span>
                                <span class="material-symbols-outlined text-[20px]">chevron_left</span>
                            </a>
                        }
                        
                        @{
                            int window = 2;
                            int startPage = Math.Max(1, Model.CurrentPage - window);
                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + window);

                            if (startPage > 1)
                            {
                                <a asp-action="Index" asp-route-page="1" asp-route-filter="@Model.CurrentFilter"
                                   class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-900 dark:text-white ring-1 ring-inset ring-slate-300 dark:ring-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 focus:z-20 focus:outline-offset-0">1</a>
                                
                                if (startPage > 2)
                                {
                                    <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-700 ring-1 ring-inset ring-slate-300 focus:outline-offset-0">...</span>
                                }
                            }

                            for (int i = startPage; i <= endPage; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <a aria-current="page" class="relative z-10 inline-flex items-center bg-primary px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary">@i</a>
                                }
                                else
                                {
                                    <a asp-action="Index" asp-route-page="@i" asp-route-filter="@Model.CurrentFilter"
                                       class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-900 dark:text-white ring-1 ring-inset ring-slate-300 dark:ring-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 focus:z-20 focus:outline-offset-0">@i</a>
                                }
                            }

                            if (endPage < Model.TotalPages)
                            {
                                if (endPage < Model.TotalPages - 1)
                                {
                                    <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-700 ring-1 ring-inset ring-slate-300 focus:outline-offset-0">...</span>
                                }
                                <a asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-filter="@Model.CurrentFilter"
                                   class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-900 dark:text-white ring-1 ring-inset ring-slate-300 dark:ring-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 focus:z-20 focus:outline-offset-0">@Model.TotalPages</a>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-filter="@Model.CurrentFilter" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 dark:ring-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 focus:z-20 focus:outline-offset-0">
                                <span class="sr-only">Next</span>
                                <span class="material-symbols-outlined text-[20px]">chevron_right</span>
                            </a>
                        }
                    </nav>
                </div>
            </div>
        </div>
    }
</div>
