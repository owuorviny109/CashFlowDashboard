@model CashFlowDashboard.ViewModels.AlertsViewModel

@{
    ViewData["Title"] = "System Alerts";
}

@functions {
    string GetSeverityColor(CashFlowDashboard.Models.Enums.AlertSeverity severity)
    {
        return severity switch
        {
            CashFlowDashboard.Models.Enums.AlertSeverity.Critical => "red",
            CashFlowDashboard.Models.Enums.AlertSeverity.Warning => "amber",
            _ => "blue"
        };
    }

    string GetSeverityIcon(CashFlowDashboard.Models.Enums.AlertSeverity severity)
    {
        return severity switch
        {
            CashFlowDashboard.Models.Enums.AlertSeverity.Critical => "error",
            CashFlowDashboard.Models.Enums.AlertSeverity.Warning => "warning",
            _ => "info"
        };
    }
}

<div class="flex flex-col gap-6">
    <!-- Toolbar -->
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-3 bg-white dark:bg-surface-dark p-1 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm">
            <button class="px-4 py-2 rounded-lg text-sm font-bold bg-background-light dark:bg-slate-800 text-slate-900 dark:text-white shadow-sm">All Alerts</button>
            <button class="px-4 py-2 rounded-lg text-sm font-medium text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Critical</button>
            <button class="px-4 py-2 rounded-lg text-sm font-medium text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Warnings</button>
        </div>
        <div class="flex items-center gap-3">
            <div class="flex items-center gap-2">
                <span class="text-xs font-medium text-slate-400 uppercase tracking-wider">Unread: @Model.UnreadCount</span>
            </div>
            <div class="h-4 w-px bg-slate-300 dark:bg-slate-700"></div>
            
            <form method="post" asp-action="Generate" asp-controller="Alerts">
                 <button type="submit" class="flex items-center gap-2 px-4 py-2 bg-slate-200 hover:bg-slate-300 dark:bg-slate-700 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-200 rounded-lg text-sm font-bold transition-all shadow-sm">
                    <span class="material-symbols-outlined text-lg">autorenew</span>
                    Run Health Check
                </button>
            </form>

            <form method="post" asp-action="MarkAllAsRead" asp-controller="Alerts">
                <button type="submit" class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg text-sm font-bold transition-all shadow-md shadow-primary/20">
                    <span class="material-symbols-outlined text-lg">done_all</span>
                    Mark all as read
                </button>
            </form>
        </div>
    </div>

    @if (Model.TodayAlerts.Any())
    {
        <!-- Alert Group: Today -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Today</h3>
            @foreach (var alert in Model.TodayAlerts)
            {
                var color = GetSeverityColor(alert.Severity);
                var icon = GetSeverityIcon(alert.Severity);
                <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row">
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-@(color)-600"></div>
                    <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                        <div class="h-12 w-12 rounded-full bg-@(color)-600/10 text-@(color)-600 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined filled">@icon</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <div class="flex items-center gap-3">
                                <h4 class="text-base font-bold text-slate-900 dark:text-white">@alert.Title</h4>
                                @if (alert.Severity == CashFlowDashboard.Models.Enums.AlertSeverity.Critical)
                                {
                                    <span class="px-2 py-0.5 rounded-full bg-@(color)-600/10 text-@(color)-600 text-xs font-bold border border-@(color)-600/20">Urgent</span>
                                }
                            </div>
                            <p class="text-slate-500 text-sm leading-relaxed">@alert.Message</p>
                            <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">schedule</span> @alert.TimeAgo
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                        <form method="post" asp-action="MarkAsRead" asp-controller="Alerts" asp-route-id="@alert.Id" class="w-full">
                            <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                                Mark as Read
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.YesterdayAlerts.Any())
    {
        <!-- Alert Group: Yesterday -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Yesterday</h3>
            @foreach (var alert in Model.YesterdayAlerts)
            {
                var color = GetSeverityColor(alert.Severity);
                var icon = GetSeverityIcon(alert.Severity);
                <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row opacity-90 hover:opacity-100">
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-@(color)-500"></div>
                    <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                        <div class="h-12 w-12 rounded-full bg-@(color)-500/10 text-@(color)-500 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined">@icon</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <h4 class="text-base font-bold text-slate-900 dark:text-white">@alert.Title</h4>
                            <p class="text-slate-500 text-sm leading-relaxed">@alert.Message</p>
                            <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">calendar_today</span> @alert.TimeAgo
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                        <form method="post" asp-action="MarkAsRead" asp-controller="Alerts" asp-route-id="@alert.Id" class="w-full">
                            <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                                Mark as Read
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.OlderAlerts.Any())
    {
        <!-- Alert Group: Older -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Older</h3>
            @foreach (var alert in Model.OlderAlerts)
            {
                var color = GetSeverityColor(alert.Severity);
                var icon = GetSeverityIcon(alert.Severity);
                <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row opacity-80 hover:opacity-100 grayscale hover:grayscale-0">
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-@(color)-500"></div>
                    <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                        <div class="h-12 w-12 rounded-full bg-@(color)-500/10 text-@(color)-500 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined">@icon</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <h4 class="text-base font-bold text-slate-900 dark:text-white">@alert.Title</h4>
                            <p class="text-slate-500 text-sm leading-relaxed">@alert.Message</p>
                            <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">calendar_today</span> @alert.TimeAgo
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                        <form method="post" asp-action="MarkAsRead" asp-controller="Alerts" asp-route-id="@alert.Id" class="w-full">
                            <button type="submit" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                                Mark as Read
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }

    @if (!Model.TodayAlerts.Any() && !Model.YesterdayAlerts.Any() && !Model.OlderAlerts.Any())
    {
        <!--  Empty State -->
        <div class="flex flex-col items-center justify-center py-16 text-center">
            <div class="h-16 w-16 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center mb-4">
                <span class="material-symbols-outlined text-3xl text-slate-400">notifications_off</span>
            </div>
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2">No Alerts</h3>
            <p class="text-sm text-slate-500 max-w-md">You're all caught up! There are no active alerts at this time.</p>
        </div>
    }

    <!-- Footer / End of List -->
    <div class="flex justify-center py-8">
        <p class="text-sm text-slate-500 flex items-center gap-2">
            <span class="material-symbols-outlined text-base">check</span> You've reached the end of the list.
        </p>
    </div>
</div>
