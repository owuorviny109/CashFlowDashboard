@model CashFlowDashboard.ViewModels.AlertsViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="flex-1 overflow-y-auto p-4 md:p-6 lg:p-8">
    <div class="max-w-5xl mx-auto flex flex-col gap-6">
        <!-- Toolbar -->
        <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="flex items-center gap-3 bg-white dark:bg-surface-dark p-1 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm">
                <button class="px-4 py-2 rounded-lg text-sm font-bold bg-background-light dark:bg-slate-800 text-slate-900 dark:text-white shadow-sm">All Alerts</button>
                <button class="px-4 py-2 rounded-lg text-sm font-medium text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Critical</button>
                <button class="px-4 py-2 rounded-lg text-sm font-medium text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Warnings</button>
                <button class="px-4 py-2 rounded-lg text-sm font-medium text-slate-500 hover:text-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Resolved</button>
            </div>
            <div class="flex items-center gap-3">
                <div class="flex items-center gap-2">
                    <span class="text-xs font-medium text-slate-400 uppercase tracking-wider">Sort by:</span>
                    <button class="flex items-center gap-1 text-sm font-bold text-slate-900 dark:text-white hover:text-primary transition-colors">
                        Date <span class="material-symbols-outlined text-lg">arrow_drop_down</span>
                    </button>
                </div>
                <div class="h-4 w-px bg-slate-300 dark:bg-slate-700"></div>
                <button class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg text-sm font-bold transition-all shadow-md shadow-primary/20">
                    <span class="material-symbols-outlined text-lg">done_all</span>
                    Mark all as read
                </button>
            </div>
        </div>
        <!-- Alert Group: Today -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Today</h3>
            <!-- Critical Alert -->
            <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row">
                <!-- Left Status Strip -->
                <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-red-600"></div>
                <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                    <div class="h-12 w-12 rounded-full bg-red-600/10 text-red-600 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined filled">error</span>
                    </div>
                    <div class="flex flex-col gap-1">
                        <div class="flex items-center gap-3">
                            <h4 class="text-base font-bold text-slate-900 dark:text-white">Overdue Invoice #4029</h4>
                            <span class="px-2 py-0.5 rounded-full bg-red-600/10 text-red-600 text-xs font-bold border border-red-600/20">Urgent</span>
                        </div>
                        <p class="text-slate-500 text-sm leading-relaxed">Payment was expected 3 days ago from <strong class="text-slate-900 dark:text-slate-300">Acme Corp</strong>. This is impacting cash flow projections for the current week.</p>
                        <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">schedule</span> 2 hours ago
                        </p>
                    </div>
                </div>
                <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                    <button class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                        Send Reminder
                    </button>
                    <button class="w-full flex items-center justify-center gap-2 px-4 py-2 text-slate-500 text-xs font-medium hover:text-slate-900 transition-colors">
                        Dismiss
                    </button>
                </div>
            </div>
            <!-- Warning Alert -->
            <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row">
                <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-amber-500"></div>
                <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                    <div class="h-12 w-12 rounded-full bg-amber-500/10 text-amber-500 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined filled">warning</span>
                    </div>
                    <div class="flex flex-col gap-1">
                        <div class="flex items-center gap-3">
                            <h4 class="text-base font-bold text-slate-900 dark:text-white">Projected Cash Shortfall</h4>
                        </div>
                        <p class="text-slate-500 text-sm leading-relaxed">Forecast indicates a dip below minimum balance threshold on <strong class="text-slate-900 dark:text-slate-300">Oct 24th</strong> due to pending vendor payouts.</p>
                        <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">schedule</span> 5 hours ago
                        </p>
                    </div>
                </div>
                <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                    <button class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                        View Forecast
                    </button>
                    <button class="w-full flex items-center justify-center gap-2 px-4 py-2 text-slate-500 text-xs font-medium hover:text-slate-900 transition-colors">
                        Dismiss
                    </button>
                </div>
            </div>
        </div>
        <!-- Alert Group: Yesterday -->
        <div class="space-y-4">
            <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider ml-1">Yesterday</h3>
            <!-- Info Alert -->
            <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row opacity-90 hover:opacity-100">
                <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-blue-500"></div>
                <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                    <div class="h-12 w-12 rounded-full bg-blue-500/10 text-blue-500 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined">info</span>
                    </div>
                    <div class="flex flex-col gap-1">
                        <h4 class="text-base font-bold text-slate-900 dark:text-white">Large Transaction Detected</h4>
                        <p class="text-slate-500 text-sm leading-relaxed">Outgoing transfer of <strong class="text-slate-900 dark:text-slate-300">$50,000.00</strong> to Vendor X requires secondary approval.</p>
                        <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">calendar_today</span> Oct 19, 4:30 PM
                        </p>
                    </div>
                </div>
                <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                    <button class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-primary text-white rounded-lg text-sm font-bold hover:bg-primary-dark transition-colors shadow-sm">
                        Review &amp; Approve
                    </button>
                </div>
            </div>
            <!-- Success Alert -->
            <div class="group relative bg-surface-light dark:bg-surface-dark rounded-xl p-0 shadow-sm hover:shadow-md border border-slate-200 dark:border-slate-700 transition-all overflow-hidden flex flex-col md:flex-row opacity-80 hover:opacity-100 grayscale hover:grayscale-0">
                <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-green-500"></div>
                <div class="flex-1 flex items-start gap-5 p-5 pl-7">
                    <div class="h-12 w-12 rounded-full bg-green-500/10 text-green-500 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined icon-fill">check_circle</span>
                    </div>
                    <div class="flex flex-col gap-1">
                        <h4 class="text-base font-bold text-slate-900 dark:text-white">Q4 Budget Finalized</h4>
                        <p class="text-slate-500 text-sm leading-relaxed">The Q4 budget has been approved by the board and is now active in the system.</p>
                        <p class="text-xs text-slate-500 mt-1 font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">calendar_today</span> Oct 19, 9:00 AM
                        </p>
                    </div>
                </div>
                <div class="flex items-center md:flex-col justify-center gap-2 p-5 border-t md:border-t-0 md:border-l border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30 md:w-48 shrink-0">
                    <button class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg text-sm font-bold text-slate-900 dark:text-white hover:border-primary hover:text-primary transition-colors shadow-sm">
                        View Budget
                    </button>
                </div>
            </div>
        </div>
        <!-- Footer / End of List -->
        <div class="flex justify-center py-8">
            <p class="text-sm text-slate-500 flex items-center gap-2">
                <span class="material-symbols-outlined text-base">check</span> You're all caught up for earlier alerts.
            </p>
        </div>
    </div>
</div>
