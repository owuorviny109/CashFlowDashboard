<aside class="w-64 bg-surface-light dark:bg-surface-dark border-r border-slate-200 dark:border-slate-800 flex flex-col transition-colors duration-200 hidden lg:flex flex-shrink-0 z-20">
    <div class="p-6 flex items-center gap-3">
        <div class="bg-primary/10 rounded-xl p-2">
            <span class="material-symbols-outlined text-primary text-3xl">token</span>
        </div>
        <div class="flex flex-col">
            <h1 class="text-slate-900 dark:text-white text-lg font-bold leading-tight tracking-tight">FinanceFlow</h1>
            <p class="text-slate-500 dark:text-slate-400 text-xs font-medium">Enterprise</p>
        </div>
    </div>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var isHome = currentController == "Home";
        var isTransactions = currentController == "Transactions";
        var isForecast = currentController == "Forecast";
        var isAlerts = currentController == "Alerts";
        var isSettings = currentController == "Settings";
    }
    <nav class="flex-1 px-4 py-4 flex flex-col gap-1 overflow-y-auto no-scrollbar">
        <a class="flex items-center gap-3 px-4 py-3 rounded-lg @(isHome ? "bg-primary/10 text-primary dark:text-primary-light" : "text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800") group transition-all" 
           asp-controller="Home" asp-action="Index">
            <span class="material-symbols-outlined @(isHome ? "filled" : "")">dashboard</span>
            <span class="text-sm @(isHome ? "font-bold" : "font-medium group-hover:text-slate-900 dark:group-hover:text-white")">Dashboard</span>
        </a>
        <a class="flex items-center gap-3 px-4 py-3 rounded-lg @(isTransactions ? "bg-primary/10 text-primary dark:text-primary-light" : "text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800") group transition-all" 
           asp-controller="Transactions" asp-action="Index">
            <span class="material-symbols-outlined @(isTransactions ? "filled" : "")">receipt_long</span>
            <span class="text-sm @(isTransactions ? "font-bold" : "font-medium group-hover:text-slate-900 dark:group-hover:text-white")">Transactions</span>
        </a>
        <a class="flex items-center gap-3 px-4 py-3 rounded-lg @(isForecast ? "bg-primary/10 text-primary dark:text-primary-light" : "text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800") group transition-all" 
           asp-controller="Forecast" asp-action="Index">
            <span class="material-symbols-outlined @(isForecast ? "filled" : "")">trending_up</span>
            <span class="text-sm @(isForecast ? "font-bold" : "font-medium group-hover:text-slate-900 dark:group-hover:text-white")">Forecast</span>
        </a>
        <a class="flex items-center gap-3 px-4 py-3 rounded-lg @(isAlerts ? "bg-primary/10 text-primary dark:text-primary-light" : "text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800") group transition-all" 
           asp-controller="Alerts" asp-action="Index">
            <span class="material-symbols-outlined @(isAlerts ? "filled" : "")">notifications</span>
            <span class="text-sm @(isAlerts ? "font-bold" : "font-medium group-hover:text-slate-900 dark:group-hover:text-white")">System Alerts</span>
        </a>
        
        <div class="mt-8 mb-2 px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Management</div>
        
        <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 transition-all group" href="#">
            <span class="material-symbols-outlined">group</span>
            <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Team</span>
        </a>
        <a class="flex items-center gap-3 px-4 py-3 rounded-lg @(isSettings ? "bg-primary/10 text-primary dark:text-primary-light" : "text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800") group transition-all" 
           asp-controller="Settings" asp-action="Index">
            <span class="material-symbols-outlined @(isSettings ? "filled" : "")">settings</span>
            <span class="text-sm @(isSettings ? "font-bold" : "font-medium group-hover:text-slate-900 dark:group-hover:text-white")">Settings</span>
        </a>
    </nav>
    <div class="p-4 border-t border-slate-200 dark:border-slate-800">
        <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800 cursor-pointer transition-colors">
            <div class="h-10 w-10 rounded-full bg-cover bg-center border border-slate-200 bg-slate-200">
                <!-- Placeholder Avatar -->
            </div>
            <div class="flex flex-col min-w-0">
                <p class="text-sm font-bold text-slate-900 dark:text-white truncate">Alex Morgan</p>
                <p class="text-xs text-slate-500 truncate">Chief Financial Officer</p>
            </div>
        </div>
    </div>
</aside>
