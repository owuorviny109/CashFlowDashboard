@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="min-h-[60vh] flex flex-col items-center justify-center text-center p-6">
    <div class="bg-red-50 dark:bg-red-900/20 p-6 rounded-full mb-6 relative">
        <span class="material-symbols-outlined text-6xl text-red-500 dark:text-red-400">gpp_maybe</span>
        <div class="absolute inset-0 bg-red-200/20 dark:bg-red-500/10 rounded-full animate-pulse"></div>
    </div>
    
    <h1 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-2 tracking-tight">Something went wrong</h1>
    <p class="text-slate-500 dark:text-slate-400 max-w-md mb-8">
        We encountered an unexpected issue while processing your request. Our team has been notified.
    </p>

    @if (Model.ShowRequestId)
    {
        <div class="bg-slate-100 dark:bg-slate-800 rounded-lg px-4 py-2 border border-slate-200 dark:border-slate-700 mb-8 font-mono text-xs text-slate-500">
            Request ID: <span class="select-all">@Model.RequestId</span>
        </div>
    }

    <div class="flex flex-col sm:flex-row gap-4">
        <a asp-controller="Home" asp-action="Index" class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-primary hover:bg-primary-dark text-white font-bold transition-all shadow-md hover:shadow-lg active:scale-95">
            <span class="material-symbols-outlined">home</span>
            Return Dashboard
        </a>
        <a href="javascript:history.back()" class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-200 font-bold hover:bg-slate-50 dark:hover:bg-slate-700 transition-all shadow-sm">
            <span class="material-symbols-outlined">arrow_back</span>
            Go Back
        </a>
    </div>
</div>
